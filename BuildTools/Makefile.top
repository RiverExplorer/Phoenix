TARGET.Release.Static  	=		$(TARGET)

TARGET.Debug						=		$(TARGET)
TARGET.Debug.Static			=		$(TARGET)

TARGET.Tcov							=		$(TARGET)
TARGET.Tcov.Static			=		$(TARGET)

