SUBDIRS	= \
	SimpleStart \
	ParseOnly

all : Android Linux W64

Android : AndroidDebug AndroidRelease AndroidTcov

W64 : W64Debug W64Release W64Tcov

Linux : LinuxDebug LinuxRelease LinuxTcov

AndroidDebug:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

AndroidRelease:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

AndroidTcov:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

Linux : LinuxDebug LinuxRelease LinuxTcov

LinuxDebug:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

LinuxRelease:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

LinuxTcov:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

W64 : W64Debug W64Release W64Tcov
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

W64Debug:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

W64Release:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

W64Tcov:
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir $(MAKECMDGOALS) ; \
	done

clean ::
	for dir in $(SUBDIRS); do \
		$(MAKE) -C $$dir clean; \
	done

